{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./types/",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es2019",
      "esnext.array",
      "dom"
    ],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error",
  },
  "files": [
    "src/index.ts",
    "src/broker/index.ts",
    "src/broker/draggable-policy.ts",
    "types/vuedraggable.d.ts",
    "types/vue-virtual-scroll-list.d.ts"
  ]
}
